<%= stylesheet_link_tag "add_product_form", :media => "all" %>

  <section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Add Details</h2>

              <%= form_with url: "/customer/order", method: :post do |form| %>
                <div class="form-outline mb-4">
                 <%= form.text_field :address , class:'form-control form-control-lg'%>
                  <label class="form-label" for="form3Example1cg"> <%= form.label :address %></label>
                </div>

                <div class="form-outline mb-4">
                  <%= form.text_field :contact_no, class:"form-control form-control-lg" %>
                  <label class="form-label" for="form3Example3cg"> <%= form.label :contact_no  %></label>
                </div>

                <div class="d-flex feild justify-content-center my-5">
                  <%= form.submit  class: 'btn btn-success btn-block btn-lg gradient-custom-4 text-body' %>
                </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
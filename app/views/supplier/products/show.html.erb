
<section class="mt-3"style="background-color: #eee;">
<div class= "container" >
<button class='btn btn-dark mt-3 'style="float: right">
<a href="/supplier/add/<%= params[:id] %>">Add product</a>
</button>
</div>
<div class="text-center container py-5">
  <h4 class="mt-1 mb-5"><strong>Bestsellers</strong></h4>

  <div class="row">
   <% @products.each do |cat| %>
    <div class="col-lg-4 col-md-12 mb-4">
      <div class="card">
        <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
          data-mdb-ripple-color="light">
          <img class="card-img-top" height="250px" width="150px" src="<%= cat.image %>" alt="Card image cap">
          <hr class="my-0" />
        </div>
        <div class="card-body">
          <a href="" class="text-reset">
            <h5 class="card-title mb-3"><%=cat.name %></h5>
          </a>
          
          <h6 class="mb-3">â‚¹<%=cat.price %></h6>
          <hr class="my-3" />
          <div class="d-flex justify-content-between align-items-center pb-2 mt-2 mb-1">
              <%= link_to 'Edit',  edit_supplier_product_path(cat.id), class:'text-dark fw-bold'%>
              <%= button_to 'Delete', supplier_product_path(cat.id), confirm: "Are you sure you want to delete this?", method: "delete",class:'btn btn-primary'%>
            </div>
        </div>
      </div>
    </div>

   
    <% end %>
  </div>

 
</div>
</section> 

 
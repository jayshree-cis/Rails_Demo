<%= stylesheet_link_tag "add_product_form", :media => "all" %>

  <section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Add New Product</h2>

              <%= form_with(model: [:supplier, @product], local: true) do |form| %>

                <div class="form-outline mb-4">
                 <%= form.text_field :name , class:'form-control form-control-lg'%>
                  <label class="form-label" for="form3Example1cg"> <%= form.label :name %></label>
                </div>

                <div class="form-outline mb-4">
                <%= form.text_field :price, class:"form-control form-control-lg" %>
                  <label class="form-label" for="form3Example3cg"> <%= form.label :price  %></label>
                </div>

                <div class="form-outline mb-4">
                <%=  form.text_field :description, class:"form-control form-control-lg" %>
                  <label class="form-label" for="form3Example3cg"> <%= form.label :description %></label>
                </div>

                <div class="row align-items-center py-3">
                <div class="col-md-3 ps-5">
  
                  <h6 class="mb-0">  <%= form.label :image %></h6>
  
                </div>
                <div class="col-md-9 pe-5">
                <%= form.file_field :image %>
                <input type="hidden" name="product[id]" class="form-control form-control-lg" value=<%= params[:id] %> />
                 
                  
                </div>
              </div>
                <div class="d-flex feild justify-content-center my-5">
                  <%= form.submit  class: 'btn btn-success btn-block btn-lg gradient-custom-4 text-body' %>
                </div>

                

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>